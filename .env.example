# HTTP server
# Port the backend Express server listens on
PORT=4000

# Library storage
# Root folder for per-customer data. Defaults to ./data at project root
LIBRARY_ROOT=./data

# AnythingLLM
# Base URL of the AnythingLLM instance (no trailing slash)
ANYTHINGLLM_API_URL=http://localhost:3001
# API key for server-to-server calls
ANYTHINGLLM_API_KEY=changeme-please

# Optional: used by ping route in /api/anythingllm (includes /api)
# If unset, defaults to http://localhost:3001/api
ANYTHINGLLM_BASE_URL=http://localhost:3001/api

