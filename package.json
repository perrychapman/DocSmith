{
    "name": "docsmith",
    "version": "1.1.0",
    "description": "DocSmith: Document management and workspace collaboration app.",
    "author": "Perry Chapman",
    "main": "electron/main.js",
    "type": "module",
    "private": true,
    "workspaces": [
        "backend",
        "frontend"
    ],
    "scripts": {
        "dev:backend": "nodemon --watch backend/src --ext ts,js --exec ts-node backend/src/server.ts",
        "build:backend": "powershell -Command \"Remove-Item backend/dist -Recurse -Force -ErrorAction SilentlyContinue\" && npx esbuild backend/src/server.ts --bundle --platform=node --target=node20 --outfile=backend/dist/server.js --external:sqlite3 --external:puppeteer --external:sharp --external:canvas --external:jsdom --external:bufferutil --external:utf-8-validate --external:encoding --keep-names --sourcemap --format=cjs && xcopy \"backend\\src\\db\\*.sql\" \"backend\\dist\\db\\\" /Y && xcopy \"backend\\package.json\" \"backend\\dist\\\" /Y",
        "build:electron": "tsc electron/main.ts --outDir electron --target es2020 --module commonjs --moduleResolution node --esModuleInterop && tsc electron/preload.ts --outDir electron --target es2020 --module commonjs --moduleResolution node --esModuleInterop",
        "start:backend": "node backend/dist/server.js",
        "generate-icons": "node scripts/generate-mac-icons.js",
        "dev": "concurrently -n backend,frontend -c yellow,cyan \"npm:dev:backend\" \"npm --workspace frontend run dev\"",
        "build": "npm run build:backend && npm run build:electron && npm --workspace backend install && cd backend && npm install typescript@^5.9.2 --no-workspaces && cd .. && cross-env VITE_ELECTRON=true npm --workspace frontend run build",
        "electron:dev": "concurrently -n backend,frontend,electron -c yellow,cyan,magenta \"npm:dev:backend\" \"npm --workspace frontend run dev\" \"electron .\"",
        "electron:build": "npm run build && electron-builder",
        "electron:build:win": "npm run build && electron-builder --win",
        "electron:build:mac": "npm run build && electron-builder --mac",
        "electron:build:linux": "npm run build && electron-builder --linux"
    },
    "devDependencies": {
        "@electron/osx-sign": "^1.3.3",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/node": "^24.5.1",
        "concurrently": "^9.2.1",
        "cross-env": "^10.0.0",
        "electron": "^38.1.2",
        "electron-builder": "^26.0.12",
        "esbuild": "^0.25.10",
        "nodemon": "^3.1.10",
        "png-to-icns": "^1.0.0",
        "png2icons": "^2.0.1",
        "sharp": "^0.34.4",
        "to-ico": "^1.1.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2"
    },
    "dependencies": {
        "axios": "^1.11.0",
        "body-parser": "^2.2.0",
        "cors": "^2.8.5",
        "docx": "^8.5.0",
        "docxtemplater": "^3.45.0",
        "dotenv": "^17.2.1",
        "electron-updater": "^6.6.2",
        "exceljs": "^4.4.0",
        "express": "^5.1.0",
        "handlebars": "^4.7.8",
        "html-to-docx": "^1.8.0",
        "mammoth": "^1.6.0",
        "marked": "^12.0.2",
        "multer": "^2.0.2",
        "node-abi": "^4.14.0",
        "pizzip": "^3.1.7",
        "puppeteer": "^23.6.0",
        "sqlite3": "^5.1.7"
    },
    "build": {
        "appId": "com.docsmith.app",
        "productName": "DocSmith",
        "icon": "frontend\\public\\favicon.ico",
        "directories": {
            "buildResources": "build",
            "output": "dist-release"
        },
        "publish": {
            "provider": "github",
            "owner": "perrychapman",
            "repo": "DocSmith"
        },
        "files": [
            "frontend/dist/**",
            "backend/dist/**",
            "backend/package.json",
            "node_modules/sqlite3/**",
            "node_modules/bindings/**",
            "node_modules/file-uri-to-path/**",
            "electron/main.js",
            "electron/preload.js",
            "electron/package.json"
        ],
        "asarUnpack": [
            "backend/dist/**",
            "node_modules/sqlite3/**",
            "node_modules/bindings/**",
            "node_modules/file-uri-to-path/**"
        ],
        "win": {
            "target": {
                "target": "nsis",
                "arch": [
                    "x64"
                ]
            }
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "allowElevation": true,
            "installerIcon": "frontend\\public\\favicon.ico",
            "uninstallerIcon": "frontend\\public\\favicon.ico",
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "DocSmith",
            "perMachine": false,
            "runAfterFinish": true,
            "artifactName": "${productName}-Setup-${version}.${ext}"
        },
        "mac": {
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ],
            "category": "public.app-category.productivity",
            "icon": "frontend/public/docsmith-icon.png",
            "hardenedRuntime": false,
            "gatekeeperAssess": false,
            "type": "distribution"
        },
        "dmg": {
            "title": "DocSmith ${version}",
            "icon": "frontend/public/docsmith-icon.png",
            "contents": [
                {
                    "x": 130,
                    "y": 220
                },
                {
                    "x": 410,
                    "y": 220,
                    "type": "link",
                    "path": "/Applications"
                }
            ],
            "window": {
                "width": 540,
                "height": 380
            }
        },
        "linux": {
            "target": "AppImage"
        }
    }
}
